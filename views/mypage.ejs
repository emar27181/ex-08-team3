<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />

    <!-- Bootstrap Bundle with Popper -->
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>

    <script defer src="../index.js"></script>
    <link href="../all.css" rel="stylesheet" />

    <title>マイページ</title>
  </head>
  <body>
    <header>
      <div class="myrow" id="header-content">
        <button class="btn btn-dark" id="sidebar-disp">menu</button>
        <div class="myrow" id="page-info">
          <div class="col-auto" id="username">name: <%= user.name %></div>
          <div class="col-auto" id="userid">ID: <%= user.employee_id %></div>
        </div>
        <a href="/channels/all" id="back-to-home" class="btn btn-light">
          HOME
        </a>
      </div>
    </header>

    <div id="below-header">
      <aside class="open">
        <div class="container-fluid">
          <ul>
            <li>
              <div class="row">
                <a href="/channel" class="channel btn" title="チャンネル作成"
                  >+</a
                >
              </div>
            </li>
            <% for (const channel of channels) { %>
            <li>
              <div class="row">
                <a
                  href="/channels/<%= channel.name %>"
                  class="channel initialism btn"
                  data-bs-toggle="tooltip"
                  data-bs-plaecment="right"
                  title="<%= channel.name %>"
                >
                  <%= channel.name.charAt(0) %>
                </a>
              </div>
            </li>
            <% } %>
          </ul>
        </div>
      </aside>

      <div id="right-sidebar">
        <div id="content-body">
          <h1>マイページ</h1>
          <div>name: <%= user.name %></div>
          <br />
          <div>ID: <%= user.employee_id %></div>
          <br />
          <div>password: <%= user.password %></div>
          <br />
          <div>
            <% if(user.position_id === 1) { %> position: マネージャー <% } else
            if (user.position_id === 2) { %> position: リーダー <% } else if
            (user.position_id === 3) { %> position: 社員 <% } %>
          </div>
          <br />
          <label for="new_name_content" class="message-content">new name</label>
          <div class="input-new-name">
            <input
              type="text"
              name="new-name"
              id="new_name_content"
              placeholder="name"
              required
            />
            <button>変更</button><br />
          </div>
          <label for="new_password_content" class="message-content"
            >new password</label
          >
          <div class="input-new-password">
            <input
              type="text"
              name="new-password"
              id="new_password_content"
              placeholder="password"
              required
            />
            <button>変更</button><br />
          </div>
          <form action="/logout" method="get" id="logout">
            <button class="btn btn-light">logout</button>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
