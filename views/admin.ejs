<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />

    <!-- Bootstrap Bundle with Popper -->
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>

    <script defer src="../index.js"></script>
    <link href="../all.css" rel="stylesheet" />
    <link href="../admin.css" rel="stylesheet" />

    <title>管理用ページ</title>
  </head>
  <body>
    <header>
      <div class="myrow" id="header-content">
        <button class="btn btn-dark" id="sidebar-disp">
          <span>-</span><span>-</span><span>-</span>
        </button>
        <div class="myrow" id="page-info">
          <div class="col-auto" id="username">name: <%= user.name %></div>
          <div class="col-auto" id="userid">ID: <%= user.id %></div>
        </div>
        <a href="/channels/all" id="back-to-home" class="btn btn-light">
          HOME
        </a>
        <a href="/mypage" id="mypage" class="btn btn-light"> MyPage </a>
      </div>
    </header>

    <div id="below-header">
      <aside class="close">
        <div class="container-fluid">
          <ul>
            <li>
              <div class="row">
                <a href="/channel" class="channel btn" title="チャンネル作成"
                  >+</a
                >
              </div>
            </li>
            <li>
              <div class="row">
                <a
                  href="/channels/all"
                  class="channel btn"
                  title="全体向けメッセージ"
                  >全体</a
                >
              </div>
            </li>
            <li>
              <div class="row">
                <a
                  href="/channels/me"
                  class="channel btn"
                  title="ダイレクトメッセージ"
                  >DM</a
                >
              </div>
            </li>
            <% for (const mem of channelsJoin) { %> <% for (const channel of
            channels) { %> <% if ( mem.channel_id === channel.channel_id) {%>
            <li>
              <div class="row">
                <a
                  href="/channels/groups/<%= channel.id %>"
                  class="channel btn"
                  data-bs-toggle="tooltip"
                  data-bs-plaecment="right"
                  title="<%= channel.name %>"
                >
                  <div class="ch-name"><%= channel.name %></div>
                </a>
              </div>
            </li>
            <% } %> <% } %> <% } %>
          </ul>
        </div>
      </aside>

      <div id="right-sidebar">
        <footer>
          <div class="container-fluid form-space">
            <form action="/channels/me" method="post" id="messagge-form">
              <label for="message_content" class="message-content"
                >社員検索</label
              >
              <div class="input-group">
                <input
                  type="text"
                  name="content"
                  id="message_content"
                  class="form-control"
                  placeholder="ee000000 or name"
                  required
                />
                <button class="btn btn-secondary">検索</button>
              </div>
            </form>
          </div>
        </footer>

        <div id="content-body">
          <h1>
            管理用ページ
            <a href="/admin/involve" id="mem-add" class="btn btn-light">
              社員追加
            </a>
          </h1>
          <div class="container-fluid">
            <ul id="employee-list">
              <% for (const employee of employees) { %>
              <div class="myrow">
                <div class="icon"></div>
                <li>
                  <form
                    action="/admin"
                    method="post"
                    id="delete-change-Employee-form"
                    onsubmit="return beforeSubmit()"
                  >
                    <div class="row">
                      <div class="col-auto employee_id">
                        <%= employee.employee_id %>
                      </div>
                      <div class="col-auto employee-position">
                        <% if (employee.position_id === 1) { %> マネージャー <%
                        } else if (employee.position_id === 2) { %> リーダー <%
                        }else if (employee.position_id === 3) { %> 社員 <% } %>
                      </div>
                      <div class="col-auto name"><%= employee.name %></div>
                    </div>
                    <div class="row">
                      <div class="col-auto">
                        <% if (employee.position_id === 1) { %>
                        <button
                          class="btn btn-secondary"
                          id="change-position1"
                          name="p_change"
                          value="<%= String(employee.employee_id) %>"
                        >
                          役職変更
                        </button>
                        <% } else {%>
                        <button
                          class="btn btn-secondary"
                          id="change-position2"
                          name="p_change"
                          value="<%= String(employee.employee_id) %>"
                        >
                          役職変更
                        </button>
                        <% } %>
                      </div>
                      <div class="col-auto">
                        <% if (employee.position_id === 1) { %>
                        <button
                          class="btn btn-dark"
                          id="mem-del1"
                          name="m_delete"
                          value="<%= String(employee.employee_id) %>"
                        >
                          削除
                        </button>
                        <% } else {%>
                        <button
                          class="btn btn-dark"
                          id="mem-del2"
                          name="m_delete"
                          value="<%= String(employee.employee_id) %>"
                        >
                          削除
                        </button>
                        <% } %>
                      </div>
                      <script>
                        function beforeSubmit() {
                          if (window.confirm("本当に変更しますか？")) {
                            return true;
                          } else {
                            return false;
                          }
                        }
                      </script>
                    </div>
                  </form>
                </li>
              </div>
              <% } %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
