<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link href="../all.css" rel="stylesheet" />

    <title>全体向けメッセージ</title>
  </head>
  <body>
    <h1>全体向けメッセージ</h1>
    <div class="container form-space">
      <form action="/channels/all" method="post" id="messagge-form">
        <label for="message_content" class="message-content">メッセージ</label>
        <input
          type="text"
          name="content"
          id="message_content"
          class="form-control"
          placeholder="ここにメッセージを入力"
        />
      </form>
    </div>

    <div class="container">
      <ul id="message-list">
        <% for (const message of messages) { %>
        <li>
          <div class="row">
            <div class="content"><%= message.content %></div>
            <div class="time"><%= message.time %></div>
            <div class="message_id"><%= message.message_id %></div>
            <div class="channel_id"><%= message.channel_id %></div>
          </div>
        </li>
        <% } %>
      </ul>
    </div>
  </body>
</html>
