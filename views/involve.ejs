<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />

    <!-- Bootstrap Bundle with Popper -->
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>

    <script defer src="../index.js"></script>
    <link href="../all.css" rel="stylesheet" />
    <link href="../involve.css" rel="stylesheet" />

    <title>管理用ページ</title>
  </head>
  <body>
    <header>
      <div class="myrow" id="header-content">
        <button class="btn btn-dark" id="sidebar-disp">
          <span>-</span><span>-</span><span>-</span>
        </button>
        <div class="myrow" id="page-info">
          <div class="col-auto" id="username">name: <%= user.name %></div>
          <div class="col-auto" id="userid">ID: <%= user.employee_id %></div>
        </div>
        <a href="/channels/all" id="back-to-home" class="btn btn-light">
          HOME
        </a>
        <a href="/mypage" id="mypage" class="btn btn-light"> MyPage </a>
      </div>
    </header>

    <div id="below-header">
      <aside class="close">
        <div class="container-fluid">
          <ul>
            <li>
              <div class="row">
                <a href="/channel" class="channel btn" title="チャンネル作成"
                  >+</a
                >
              </div>
            </li>
            <% for (const mem of channelsJoin) { %> <% for (const channel of channels) {
              %> <% if ( mem.channel_id === channel.channel_id) {%>
            <li>
              <div class="row">
                <a
                  href="/channels/<%= channel.name %>"
                  class="channel btn"
                  data-bs-toggle="tooltip"
                  data-bs-plaecment="right"
                  title="<%= channel.name %>"
                >
                  <div class="ch-name"><%= channel.name %></div>
                </a>
              </div>
            </li>
            <% } %> <% } %> <% } %>
          </ul>
        </div>
      </aside>

      <div id="right-sidebar">
        <div id="content-body">
          <h1>
            管理用ページ -社員追加-
            <a href="/admin" id="back-to-mem-edit" class="btn btn-light">
              戻る
            </a>
          </h1>
          <div class="container">
            <div class="input-new-employee">
              <div class="container-fluid form-space">
                <form
                  action="/admin/involve"
                  method="post"
                  id="newEmployee-form"
                >
                  <label for="employee_id_content" class="newEmployee-content"
                    >社員id</label
                  >
                  <input
                    type="text"
                    name="employee_id"
                    class="form-control"
                    id="employee_id_content"
                    pattern="[a-z][a-z][0-9]{6}"
                    title="英小文字２文字と数字６文字"
                    placeholder="ee000000"
                    required
                  />
                  <label for="name_content" class="newEmployee-content"
                    >社員名</label
                  >
                  <input
                    type="text"
                    name="name"
                    class="form-control"
                    id="name_content"
                    placeholder="name"
                    required
                  />
                  <label for="password_content" class="newEmployee-content"
                    >仮パスワード</label
                  >
                  <input
                    type="text"
                    name="password"
                    class="form-control"
                    id="password_content"
                    placeholder="password"
                    required
                  />
                  <label for="select-position">役職</label>
                  <select
                    class="form-select"
                    name="position_id"
                    id="select-position"
                  >
                    <option value="2">リーダー</option>
                    <option value="3" selected>社員</option>
                  </select>
                  <button class="btn btn-dark">追加</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
